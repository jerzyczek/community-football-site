{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>Comment index</h1>
        <table class="table">
            <thead>
                <tr class="thead-color">
                    <th>Id</th>
                    <th>Content</th>
                    <th>Reactions</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr class="{{ cycle(["white", "gray"], loop.index0)}}">
                    <td>{{ comment.id }}</td>
                    <td>{{ comment.content }}</td>
                    <td>{{ comment.reactions ? comment.reactions|json_encode : '' }}</td>
                    <td>
                        {{ include('comment/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('post_index', {'groupId' : app.request.get('groupId')}) }}"><button class="btn btn-info">Back to previous page</button></a>
    </div>
{% endblock %}
