{% extends 'base.html.twig' %}

{% block title %}
Home Page
{% endblock %}
{% block body %}

    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 col-sm-12 d-md-block bg-light sidebar">
                <div class="sidebar-sticky">
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>Groups</span>
                        <a class="d-flex align-items-center text-muted" href="#">
                            <span data-feather="plus-circle"></span>
                        </a>
                    </h6>
                    <ul class="nav flex-column">
                        {% for group in app.user.getGroupsMember() %}
                            <li class="nav-item">
                                <a class="nav-link active groupViewLink" href="#" data-groupId="{{ group.id }}">
                                    <span data-feather="home"></span>
                                    {{ group.getName() }} <span class="sr-only">(current)</span>
                                </a>
                            </li>
                        {% endfor %}

                    </ul>
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>Own Groups</span>
                        <a class="d-flex align-items-center text-muted" href="#">
                            <span data-feather="plus-circle"></span>
                        </a>
                    </h6>
                    <ul class="nav flex-column">
                        {% for group in app.user.getGroups() %}
                            <li class="nav-item">
                                <a class="nav-link active groupViewLink" href="#" data-groupId="{{ group.id }}">
                                    <span data-feather="home"></span>
                                    {{ group.getName() }} <span class="sr-only">(current)</span>
                                </a>
                            </li>
                        {% endfor %}

                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>Last Posts</span>
                        <a class="d-flex align-items-center text-muted" href="#">
                            <span data-feather="plus-circle"></span>
                        </a>
                    </h6>
                    <ul class="nav flex-column mb-2">

                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span data-feather="file-text"></span>
                                Post 1 - Group 2
                            </a>
                        </li>

                    </ul>
                </div>
            </nav>

            <main id="mainView" role="main" class="col-md-8 col-sm-12 ml-sm-auto px-4">

            </main>

            <aside class="col-md-2 bg-light d-md-block">
                <div class="sidebar-sticky">

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>Users Online</span>
                    </h6>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span data-feather="file-text"></span>
                                User 1
                            </a>
                        </li>
                    </ul>
                </div>
            </aside>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    <script>

        $(document).on('click', 'a.groupViewLink', function () {

            var groupId = $(this).data('groupid');
            jQueryActions.ajaxCall("group/"+groupId+"/groupView", false, false, function (data) {
                $('#mainView').html(data);
            });
        });

        console.log('jere');

        $(document).on('keypress', '.commentField', function (event) {

            if(event.which == 13 && !event.shiftKey)
            {
                event.preventDefault();
                var value = jQuery.trim($(this).val());
                if(value === '')
                {
                    return;
                }
                var postid = $(this).closest('.postItem').data('postid');
                var groupid = $(this).closest('.groupItem').data('groupid');
                var url = '/group/' + groupid + '/post/' + postid + '/comment/newAjax';

                jQueryActions.ajaxCall(url, 'POST', {content: value}, function (data) {
                    $('.comments-list').append(data);
                });

            }
        });

        $(document).on('click', 'a.likeComment', function (event) {
            event.preventDefault();
            jQueryActions.likeComment($(this));
        });

        $(document).on('click', 'a.responseLink', function (event) {
            event.preventDefault();
            var commentResponse = $(this).parents('.comment').children('.commentResponse');
            jQueryActions.toggle(commentResponse);
        });
        
        $(document).on('click', 'a.commentDelete', function (event) {

        });

        var jQueryActions = {
            ajaxCall : function (url, method, data, callback)
            {
                $.ajax({
                    type: method || "GET",
                    data: data || {},
                    url: url,
                    success: callback
                });
            },
            toggle: function (element) {
                element.toggle('slow');
            },
            likeComment: function (element) {

