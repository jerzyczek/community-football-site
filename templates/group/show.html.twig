{% extends 'base.html.twig' %}

{% block title %}Group{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>Group</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ group.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ group.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ group.description }}</td>
                </tr>
                <tr>
                    <th>UpdatedAt</th>
                    <td>{{ group.updatedAt ? group.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ group.createdAt ? group.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Members</th>
                    <td>
                        {% for member in group.getMembers() %}
                            {{member.getFirstName }}
                        {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('group_index') }}"><button class="btn btn-info">Back to previous page</button></a>

        <a href="{{ path('group_edit', {'id': group.id}) }}"><button class="btn btn-primary">Edit</button></a>

        {{ include('group/_delete_form.html.twig') }}
    </div>
{% endblock %}
